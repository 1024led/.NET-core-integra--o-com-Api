@model IEnumerable<Cotacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Sistema de gerencia de Cotações</h1>

<p>
    <a asp-action="Create">inserir nova Cotação</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MoedaOrigem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoedaDestino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MoedaOrigem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoedaDestino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataStr)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CotacaoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CotacaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
